<div style="margin-right: 2%; margin-bottom:10px; text-align: center;">
    <a href="#">
        <img src="@Pelicula.Poster" style="width:225px; height:300px;" alt="@Pelicula.TituloCorto" />
    </a>
    <p style="max-width:225px; height:44px; font-size: 15px; font-weight: bold;">
        @Pelicula.TituloCorto
    </p>
    <div>
        <a href="#" class="btn btn-info">Editar</a>
        <button type="button" class="btn btn-danger" @onclick="@( () => EliminarPelicula.InvokeAsync(Pelicula) )">Eliminar</button>
    </div>
</div>

@code{
    [Parameter] public Pelicula Pelicula { get; set; }
    [Parameter] public bool MostrarBotones { get; set; } = false;
    [Parameter] public EventCallback<Pelicula> EliminarPelicula { get; set; }
}
